<%= form_with(model: event, local: true)  do |form| %>
  <%= form.label :title%>
  <%= form.text_field :title%>
  <br>
  <%= form.label :description%>
  <%= form.text_area :description%>
  <br>
  <%= form.label :start_date%>
  <%= form.date_field :start_date%>
  <br>
  <%= form.label :end_date%>
  <%= form.date_field :end_date%>
  <br>

  <%= form.fields_for :places do |places_form|%>
    <%= places_form.label :name %><br>
    <%= places_form.text_field :name%>
    <br>
    <%= places_form.fields_for :address do |address_form|%>
       
      <%= address_form.label :city%>
      <%= address_form.text_field :city%>
      <br>
      <%= address_form.label :street_address%>
      <%= address_form.text_field :street_address%>
      <br>
      <%= address_form.label :zip_code%>
      <%= address_form.text_field :zip_code%>
      <br>
      <%= address_form.label :state%>
      <%= address_form.text_field :state%>
      <br>
      <%= address_form.label :nation%>
      <%= address_form.text_field :nation%>
      
    <%end%>
    
  <%end%>  

  
  

  <!-- Form to insert new place event -->
  <!-- Form to insert address to place -->
  <!--<#%= form.collection_select(:place_id, Place.all, :id, :name)%>-->
  <br>
  <br>

  <%= form.submit%>
<%end%>
